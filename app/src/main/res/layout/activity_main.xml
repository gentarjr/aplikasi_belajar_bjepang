<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:text="DAFTAR KOSAKATA dan KUIS"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/daftar_kosakata"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="DAFTAR KOSAKATA"
        android:background="@drawable/daftar_kosakata"
        android:textSize="20sp"
        android:onClick="daftarKosakata"
        android:textColor="#ffff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/kuis_kosakata"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="KUIS KOSAKATA"
        android:background="@drawable/kuis_kosakata"
        android:onClick="kuisKosakata"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:layout_margin="10dp"/>


</LinearLayout>